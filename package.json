{
  "name": "nestjs-generator",
  "version": "1.0.0",
  "description": "CLI Generator for Production-Grade NestJS Monoliths",
  "main": "dist/index.js",
  "bin": {
    "nxg": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "nestjs",
    "generator",
    "cli",
    "backend",
    "monolith",
    "prisma",
    "postgresql"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@oclif/core": "^2.15.0",
    "@oclif/plugin-help": "^5.2.19",
    "inquirer": "^9.2.15",
    "handlebars": "^4.7.8",
    "fs-extra": "^11.2.0",
    "change-case": "^5.2.0",
    "prettier": "^3.1.1",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "execa": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "templates"
  ],
  "oclif": {
    "bin": "nxg",
    "dirname": "dist",
    "plugins": [
      "@oclif/plugin-help"
    ]
  }
}
