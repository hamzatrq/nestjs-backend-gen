# Application
NODE_ENV=development
PORT=3000
API_PREFIX={{apiBase}}
API_VERSION={{apiVersion}}

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/{{projectNameKebab}}?schema=public

# Authentication
JWT_SECRET=change_me_to_a_secure_secret
JWT_EXPIRES_IN=15m
REFRESH_JWT_SECRET=change_me_too_to_a_secure_secret
REFRESH_JWT_EXPIRES_IN=30d

# Security
CORS_ORIGINS=http://localhost:3000
RATE_LIMIT_POINTS=120
RATE_LIMIT_DURATION=60
CSRF_SECRET=change_me_to_a_secure_csrf_secret

# Logging
LOG_LEVEL=info
LOG_DESTINATION=console
LOG_FILE_PATH=logs/app.log

# Monitoring
SENTRY_DSN=
SENTRY_ENV=development

# Optional Services
{{#if (includes optionalServices 'email')}}
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=
{{/if}}

{{#if (includes optionalServices 'cache')}}
REDIS_URL=redis://localhost:6379
{{/if}}

{{#if (includes optionalServices 'file-storage')}}
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
{{/if}}
